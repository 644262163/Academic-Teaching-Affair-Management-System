<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.niit.dao.AdministratorDao">
    <!--
        返回结果映射
        如果开启驼峰命名转换且命名规范该段代码可以不写
        因为配置别名 所以type属性使用的是mybatis-conf中的别名
    -->
    <resultMap type="com.niit.bean.Administrator" id="AdministratorResult">
        <id property="id" column="id"/>
        <result property="user" column="user"/>
        <result property="password" column="password"/>
    </resultMap>
    
    <!--  定义字段集合 -->
    <sql id="AdministratorColumns">
        user, password
    </sql>
    
    <!-- 接口中getAdministratorByUser 具体实现-->
	<select id="getAdministratorByUser" resultMap="AdministratorResult">
		select 
		<include refid="AdministratorColumns"/>
		from administrator where user = #{user}
	</select>
	
	<select id="getAdministratorList" resultMap="AdministratorResult">
		select 
		<include refid="AdministratorColumns"/>
		from administrator
	</select>
	
</mapper>