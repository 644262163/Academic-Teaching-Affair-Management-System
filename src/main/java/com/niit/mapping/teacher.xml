<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.niit.dao.TeacherDao">
    <!--
        返回结果映射
        如果开启驼峰命名转换且命名规范该段代码可以不写
        因为配置别名 所以type属性使用的是mybatis-conf中的别名
    -->
    <resultMap type="com.niit.bean.Teacher" id="TeacherResult">
        <id property="id" column="id"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
    </resultMap>
    
    <!--  定义字段集合 -->
    <sql id="TeacherColumns">
        id, password, name
    </sql>
    
    <!-- 接口中selectTeacherById 具体实现-->
    <select id="selectTeacherById" resultType="com.niit.bean.Teacher">
        select
        <include refid="TeacherColumns"/>
        from teacher
        where id = #{id}
    </select>
    
    <select id="selectTeacherList" resultMap="TeacherResult">
        select 
        <include refid="TeacherColumns"/>
        from teacher
    </select>
    
    <select id="selectTeacherListByPage" resultMap="TeacherResult">
        select 
        <include refid="TeacherColumns"/>
        from teacher
        <where>
            <if test="teacher.id!=null and teacher.id!=''">
                and id like concat('%', #{teacher.id}, '%')
            </if>
            <if test="teacher.password!=null and teacher.password!=''">
                and password like concat('%', #{teacher.password}, '%')
            </if>
            <if test="teacher.name!=null and teacher.name!=''">
                and name like concat('%', #{teacher.name}, '%')
            </if>
        </where>
        limit #{start} ,#{end}
    </select>
    
    <select id="selectTotal" parameterType="com.niit.bean.Teacher" resultType="java.lang.Long">
        select
        count(*)
        from teacher
        <where>
            <if test="id!=null and id!=''">
                and id like concat('%', #{id}, '%')
            </if>
            <if test="password!=null and password!=''">
                and password like concat('%', #{password}, '%')
            </if>
            <if test="name!=null and name!=''">
                and name like concat('%', #{name}, '%')
            </if>
        </where>
    </select>
    
    
    <update id="updateTeacher" parameterType="com.niit.bean.Teacher">
        update teacher
        <set>
            <if test="password!=null and password!=''">
                password=#{password},
            </if>
            <if test="name!=null and name!=''">
                name=#{name},
            </if>
        </set>
        where id=#{id}
    </update>
    
    <delete id="deleteTeacherById">
        delete
        from teacher
        where id=#{id}
    </delete>
    
    <insert id="insertTeacher" parameterType="com.niit.bean.Teacher">
        insert into teacher
        values (
        #{id},#{password},#{name}
        )
    </insert>
    
</mapper>